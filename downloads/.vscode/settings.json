{
  // General
  "window.restoreWindows": "none",
  "window.titleBarStyle": "native",
  "window.confirmBeforeClose": "keyboardOnly",
  "explorer.openEditors.visible": 1,
  "explorer.sortOrder": "type",
  "explorer.compactFolders": false,
  "git.openDiffOnClick": false,
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "always",
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.stickyScroll.enabled": true,
  "editor.suggest.insertMode": "replace",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.renderWhitespace": "trailing",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.bracketPairColorization.enabled": false,
  "editor.linkedEditing": true,
  "editor.stickyTabStops": true,
  // Formatting
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.addMissingImports": true,
    "source.organizeImports": true
  },
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  // Terminal
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "zsh",
      "args": ["-i"]
    }
  },
  "terminal.integrated.fontWeight": 500,
  "terminal.integrated.fontSize": 13,
  // Fonts
  "editor.lineHeight": 20,
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.fontFamily": "Iosevka Nerd Font, Noto Color Emoji",
  // Markdown support
  "markdown.validate.enabled": true,
  "markdown.updateLinksOnFileMove.enabled": "prompt",
  // Telemetry & updates
  "telemetry.telemetryLevel": "off",
  "update.mode": "manual",
  "extensions.autoUpdate": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.enableExperiments": false,
  "extensions.autoCheckUpdates": false,
  /* ------------------------------- Extensions ------------------------------- */
  // https://marketplace.visualstudio.com/items?itemName=esbenp.prettier-vscode
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  // https://marketplace.visualstudio.com/items?itemName=streetsidesoftware.code-spell-checker
  "cSpell.language": "en,fr",
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.userWords": ["aujourd'hui", "navbar", "scrollbar", "sidenav"],
  // https://marketplace.visualstudio.com/items?itemName=PKief.material-icon-theme
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.activeIconPack": "angular_ngrx",
  "material-icon-theme.files.associations": {
    "*.controller.ts": "nest-controller",
    "*.middleware.ts": "nest-middleware",
    "*.filter.ts": "nest-filter",
    "*.gateway.ts": "nest-gateway",
    "*.entity.ts": "nest-service",
    "*.decorator.ts": "nest-decorator",
    "*.dto.ts": "nest-module",
    "*.store.ts": "ngrx-effects",
    "project.json": "nrwl",
    "*.config.ts": "settings",
    "*.strategy.ts": "tree",
    "environment.ts": "tune",
    "environment.staging.ts": "tune",
    "environment.development.ts": "tune",
    "environment.dev.ts": "tune",
    "environment.pprd.ts": "tune",
    "environment.preprod.ts": "tune",
    ".nvmrc": "nodejs_alt"
  },
  "material-icon-theme.folders.associations": {
    "entities": "database",
    "dto": "syntax",
    "dtos": "syntax",
    "strategies": "meta",
    "filters": "other",
    "models": "typescript",
    "features": "include",
    "feature-shell": "container",
    "ui": "mobile",
    "data-access": "resource"
  },
  // https://marketplace.visualstudio.com/items?itemName=hancel.google-translate
  "google-translate.firstLanguage": "en",
  "google-translate.secondLanguage": "fr",
  // https://marketplace.visualstudio.com/items?itemName=sndst00m.vscode-native-svg-preview
  "workbench.editorAssociations": {
    "*.svg": "svgPreview.previewEditor"
  },
  // https://marketplace.visualstudio.com/items?itemName=nrwl.angular-console
  "nxConsole.enableTelemetry": false,
  "nxConsole.showNodeVersionOnStartup": false,
  /* ------------------------------ New settings ------------------------------ */
  "": ""
}
