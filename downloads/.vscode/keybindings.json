[
  /* ----------------------------- Window & layout ---------------------------- */
  {
    "key": "cmd+q",
    "command": "isMac"
  },
  {
    "key": "ctrl+alt+s",
    "command": "workbench.action.files.saveAll",
    "when": "!isMac"
  },
  /* ----------------------------- Terminal panel ----------------------------- */
  {
    "key": "alt+x",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "alt+j",
    "command": "workbench.action.terminal.splitInActiveWorkspace"
  },
  {
    "key": "alt+f",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  /* --------------------------------- Editor --------------------------------- */
  {
    "key": "alt+w",
    "command": "editor.emmet.action.wrapWithAbbreviation",
    "when": "editorHasSelection && editorLangId == 'html'"
  },
  {
    "key": "alt+w",
    "command": "editor.action.surroundWithSnippet",
    "when": "editorHasSelection && editorLangId != 'html'"
  },
  {
    "key": "alt+shift+right",
    "command": "editor.action.smartSelect.expand",
    "when": "!isMac && editorTextFocus && editorLangId != 'html'"
  },
  {
    "key": "alt+shift+left",
    "command": "editor.action.smartSelect.shrink",
    "when": "!isMac && editorTextFocus && editorLangId != 'html'"
  },
  {
    "key": "alt+shift+right",
    "command": "editor.emmet.action.balanceOut",
    "when": "!isMac && editorTextFocus && editorLangId == 'html'"
  },
  {
    "key": "alt+shift+left",
    "command": "editor.emmet.action.balanceIn",
    "when": "!isMac && editorTextFocus && editorLangId == 'html'"
  },
  {
    "key": "alt+shift+up",
    "command": "editor.action.copyLinesUpAction",
    "when": "!isMac && editorTextFocus"
  },
  {
    "key": "alt+shift+down",
    "command": "editor.action.copyLinesDownAction",
    "when": "!isMac && editorTextFocus"
  },
  {
    "key": "alt+d",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "!isMac && editorTextFocus"
  },
  {
    "key": "cmd+d",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "isMac && editorTextFocus"
  },
  {
    "key": "alt+shift+d",
    "command": "editor.action.selectHighlights",
    "when": "!isMac && editorTextFocus"
  },
  {
    "key": "cmd+shift+d",
    "command": "editor.action.selectHighlights",
    "when": "isMac && editorTextFocus"
  },
  {
    "key": "alt+shift+r",
    "command": "editor.action.rename",
    "when": "!isMac && editorTextFocus"
  },
  {
    "key": "cmd+shift+r",
    "command": "editor.action.rename",
    "when": "isMac && editorTextFocus"
  },
  /* ------------------------------- Extensions ------------------------------- */
  // https://marketplace.visualstudio.com/items?itemName=vit-m.template-strings
  {
    "key": "alt+[BracketRight]",
    "command": "template-strings.insertArg",
    "when": "editorTextFocus"
  },
  // https://marketplace.visualstudio.com/items?itemName=whtouche.vscode-js-console-utils
  {
    "key": "cmd+shift+l",
    "command": "extension.insertLogStatement",
    "when": "editorTextFocus && !editorReadOnly"
  },
  // https://marketplace.visualstudio.com/items?itemName=john-crowson.angular-file-changer
  {
    "key": "alt+q",
    "command": "extension.switchTypeScript",
    "when": "editorLangId == 'html'"
  },
  {
    "key": "alt+q",
    "command": "extension.switchHTML",
    "when": "editorLangId == 'typescript' || editorLangId == 'scss' || editorLangId == 'css' || editorLangId == 'less"
  }
]
