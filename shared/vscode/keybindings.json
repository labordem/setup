[
  // Create file or/and directory
  {
    "key": "cmd+n",
    "command": "explorer.newFile",
    "when": "isMac && explorerViewletFocus"
  },
  {
    "key": "ctrl+n",
    "command": "explorer.newFile",
    "when": "!isMac && explorerViewletFocus"
  },
  // Quick controls on terminal
  {
    "key": "shift+cmd+j",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "isMac && (panelAlignment == 'center' || panelPosition != 'bottom' && panelPosition != 'top')"
  },
  {
    "key": "ctrl+shift+j",
    "command": "!isMac && workbench.action.toggleMaximizedPanel",
    "when": "!isMac && (panelAlignment == 'center' || panelPosition != 'bottom' && panelPosition != 'top')"
  },
  // Quick controls for editor groups
  {
    "key": "cmd+2",
    "command": "workbench.action.splitEditor",
    "when": "!multipleEditorGroups"
  },
  // Smart wraps
  {
    "key": "alt+w",
    "command": "editor.emmet.action.wrapWithAbbreviation",
    "when": "editorHasSelection"
  },
  {
    "key": "alt+shift+w",
    "command": "editor.action.surroundWithSnippet",
    "when": "editorHasSelection"
  },
  // Quick rename, replace F2
  {
    "key": "alt+shift+r",
    "command": "editor.action.rename",
    "when": "editorTextFocus"
  },
  // Select highlights
  {
    "key": "cmd+shift+d",
    "command": "editor.action.selectHighlights",
    "when": "isMac && editorTextFocus"
  },
  {
    "key": "ctrl+shift+d",
    "command": "editor.action.selectHighlights",
    "when": "!isMac && editorTextFocus"
  },
  // Copy lines top / down on Linux like MacOS
  {
    "key": "shift+alt+down",
    "command": "editor.action.copyLinesDownAction",
    "when": "!isMac && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+alt+down",
    "command": "-editor.action.copyLinesDownAction",
    "when": "!isMac && editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+alt+up",
    "command": "editor.action.copyLinesUpAction",
    "when": "!isMac && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+alt+up",
    "command": "-editor.action.copyLinesUpAction",
    "when": "!isMac && editorTextFocus && !editorReadonly"
  },
  // Convert quotes to ES6 template and insert an argument. (vit-m.template-strings)
  {
    "key": "alt+\\",
    "command": "template-strings.insertArg",
    "when": "editorTextFocus && (editorLangId == 'javascript' || editorLangId == 'typescript')"
  }
]
